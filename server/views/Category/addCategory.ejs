<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Add Category</title>
    <link rel="stylesheet" href="/styles/index.css" />
    <link rel="stylesheet" href="/styles/output.css" />
  </head>
  <body>
    <form
      method="POST"
      action="/category/add"
      enctype="multipart/form-data"
      class="bg-grey"
    >
      <div class="title">
        <label for="title">Title</label>
        <input type="text" name="title" />
      </div>
      <div class="description">
        <label for="description">Description</label>
        <input type="text" name="description" />
      </div>
      <div class="logo">
        <label for="imageUrl">Logo</label>
        <input type="file" name="imageUrl" accept="image" />
      </div>
      <div class="fields">
        <label for="fields">Required Fields</label>
        <div id="add_fields"></div>
        <button type="button" onClick="addfields()">Add</button>
      </div>
      <input type="submit" value="Save" />
    </form>
    <script src="/scripts/Category/addCategory.js"></script>
  </body>
</html>
